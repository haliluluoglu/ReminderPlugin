<idea-plugin>
    <id>org.example.ReminderPlugin</id>
    <name>HaveYou</name>
    <vendor email="haliluluoglu@gmail.com" url="http://www.haliluluoglu.com">Halil Uluoglu</vendor>
    <version>1.0</version>


    <description>
        The plugin reminds you to push codes into the Git, when you try to close the IntelliJ.

        Includes the following features:
        - "Have you pushed all codes to the Github!?" question
    </description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectCloseHandler implementation="com.example.myideademo.MyListenerClass"/>
    </extensions>

    <actions>
    </actions>


</idea-plugin>